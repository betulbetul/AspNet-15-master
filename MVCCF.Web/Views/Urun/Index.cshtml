@model List<Urun>
@{
    ViewBag.Title = "Ürünler";
}

<h2>Index</h2>

<a href="@Url.Action("Ekle", "Kategori")" class="btn btn-success btn-lg"> Yeni Kategori Ekle</a>

<h2> Toplam Ürün: @Model.Count</h2>
<table class="table table-responsive table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>Düzen</th>
        </tr>
    </thead>
    <tbody>
        @{

            int sayac = 0;
            foreach (var item in Model)
            {
                sayac++;
                <tr>
                    <th>@sayac</th>
                    <td>@item.UrunAdi  </td>
                    <td>@item.Kategori.KategoriAdi</td>
                    <td> @($"{item.Fiyat:c2}")  </td>
                    <td>
                        <a href="@Url.Action("Guncelle", "Ürün", new { id = item.Id })" class="btn btn-warning">GÜNCELLE</a>
                    </td>
                </tr>
            }

        }
    </tbody>


</table>