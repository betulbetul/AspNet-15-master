@model  KategoriViewModel
@{
    ViewBag.Title = $"{Model.KategoriAdi} Güncelle";
}

<h2>Guncelle</h2>

<div class="row">
    <img src="@Model.KategoriFotoUrl" alt="@Model.KategoriAdi" height="120" width="15" class="img img-responsive" />
    <div class="col-md-offset-3 col-md-6"> 
        @Html.ValidationSummary()
        @using (Html.BeginForm("Ekle", "Kategori", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Id)
            <div class="form-group">
                @Html.LabelFor(x => x.KategoriAdi, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.KategoriAdi, new { })
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Aciklama, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Aciklama, new { })
                </div>

            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.UstKategoriId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.UstKategoriId, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control" })
                </div>

            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label"> Kategori Fotoğrafı </label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Dosya, new { @class = "form-control", type = "file" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success">KATEGORİ EKLE </button>
                </div>

            </div>

        }

    </div>
</div>